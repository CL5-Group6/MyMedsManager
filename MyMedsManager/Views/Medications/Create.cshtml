@model MyMedsManager.Models.Medication

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Medication</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicine" class="control-label"></label>
                <input asp-for="Medicine" class="form-control" />
                <span asp-validation-for="Medicine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedQuantity" class="control-label"></label>
                <input asp-for="MedQuantity" class="form-control" />
                <span asp-validation-for="MedQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownList("DosageValue", new SelectList(Enum.GetValues(typeof(Medication.Dosage))), "Select Dosage", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownList("FrequencyValue", new SelectList(Enum.GetValues(typeof(Medication.Freq))), "Select Frequency", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
